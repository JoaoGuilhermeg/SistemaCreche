<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.DatePicker?>
<VBox fx:controller="com.salo.sistemacreche.controller.ListaMatriculasController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="20.0" style="-fx-background-color: #f8fdf8;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-text-fill: #2e7d32;" text="Lista de Matrículas">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <Label fx:id="welcomeText"></Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <!-- Campo de pesquisa por texto livre -->
        <TextField fx:id="fieldPesquisarMatricula" prefHeight="35.0" prefWidth="250.0"
                   promptText="Nome da criança, responsável..."
                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <!-- Filtro por situação -->
        <ComboBox fx:id="comboSituacao" prefHeight="35.0" prefWidth="150.0"
                  promptText="Situação"
                  style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <!-- Filtro por data inicial -->
        <DatePicker fx:id="datePickerInicio" prefHeight="35.0" prefWidth="140.0"
                    promptText="Data início"
                    style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <!-- Filtro por data final -->
        <DatePicker fx:id="datePickerFim" prefHeight="35.0" prefWidth="140.0"
                    promptText="Data fim"
                    style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <!-- Botão de busca -->
        <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0"
                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Buscar" onAction="#buscarMatriculas"/>

        <!-- Botão limpar filtros -->
        <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0"
                style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Limpar" onAction="#limparFiltros"/>
    </HBox>

    <ScrollPane fitToWidth="true" prefHeight="400.0"
                style="-fx-background: #f8fdf8; -fx-border-color: #e8f5e8; -fx-border-radius: 5;">
        <VBox fx:id="cardsContainer" spacing="10.0" style="-fx-background-color: #f8fdf8;"/>
    </ScrollPane>
</VBox>