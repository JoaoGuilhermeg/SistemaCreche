<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salo.sistemacreche.controller.extracadastro.PessoaAutorizadaController">
    <Label style="-fx-text-fill: #0f766e; -fx-font-weight: bold; -fx-font-size: 16;" text="Cadastro de Pessoa Autorizada" />

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="200" />
            <ColumnConstraints prefWidth="200" />
        </columnConstraints>
        <children>
            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label style="-fx-text-fill: #0f766e; -fx-font-size: 12;" text="Nome Completo" />
                <TextField fx:id="fieldNome" prefHeight="35.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-radius: 5;" />
            </VBox>
            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label style="-fx-text-fill: #0f766e; -fx-font-size: 12;" text="Parentesco" />
                <TextField fx:id="fieldParentesco" prefHeight="35.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-radius: 5;" />
            </VBox>
            <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label style="-fx-text-fill: #0f766e; -fx-font-size: 12;" text="RG" />
                <TextField fx:id="fieldRg" prefHeight="35.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-radius: 5;" />
            </VBox>
            <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label style="-fx-text-fill: #0f766e; -fx-font-size: 12;" text="Telefone/Celular" />
                <TextField fx:id="fieldTelefone" prefHeight="35.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-radius: 5;" />
            </VBox>
        </children>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 20 0 0 0;">
        <Button onAction="#salvarPessoaAutorizada" style="-fx-background-color: #0f766e; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 100;" text="Salvar" />
        <Button onAction="#cancelarPessoaAutorizada" style="-fx-background-color: #b02e50; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 100;" text="Cancelar" />
    </HBox>
</VBox>