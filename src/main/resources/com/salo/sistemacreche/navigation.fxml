<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.salo.sistemacreche.controller.NavigationController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      prefWidth="220.0" spacing="8.0" style="-fx-background-color: #1b5e20; -fx-padding: 20 0 20 0;">

    <Button fx:id="btnListaMatriculas" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-border-width: 0 0 0 4; -fx-border-color: #ffffff; -fx-font-weight: bold;"
            text="Lista de matrículas"/>

    <Button fx:id="btnCadastrarMatricula" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: #388e3c; -fx-text-fill: white;"
            text="Cadastrar matrícula" />

    <Button fx:id="btnRematricula" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: #388e3c; -fx-text-fill: white;"
            text="Realizar re-matrícula" />

    <Button fx:id="btnRelatorios" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: #388e3c; -fx-text-fill: white;"
            text="Relatórios" />

    <Button fx:id="btnDeclaracoes" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0"
            style="-fx-background-color: #388e3c; -fx-text-fill: white;"
            text="Declarações" />
</VBox>