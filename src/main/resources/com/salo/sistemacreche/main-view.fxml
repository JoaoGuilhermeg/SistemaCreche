<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f8fdf8;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.salo.sistemacreche.controller.MainController">

    <top>
        <VBox spacing="10.0" style="-fx-background-color: #2e7d32; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: white;" text="Creche Estrela do Oriente">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <left>
        <!-- INCLUI o menu de navegação -->
        <fx:include fx:id="navigation" source="navigation.fxml"/>
    </left>

    <center>
        <!-- Área onde as telas serão carregadas dinamicamente -->
        <StackPane fx:id="contentArea" style="-fx-background-color: #f8fdf8;"/>
    </center>
</BorderPane>