<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="com.salo.sistemacreche.controller.CadastroMatriculaController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="20.0" style="-fx-background-color: #f8fdf8;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-text-fill: #2e7d32;" text="Cadastrar Nova Matrícula">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <ScrollPane fitToWidth="true" prefHeight="450.0" style="-fx-background: #f8fdf8;">
        <VBox spacing="20.0" style="-fx-background-color: #f8fdf8;">

            <!-- Seção 1: Identificação da Criança -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #e8f5e8; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 20;">
                <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold;" text="1. Identificação da Criança">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="300" />
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <Label text="Nome completo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fieldNomeCrianca" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0" />

                        <Label text="Identidade (RG):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldRgCrianca" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Data de Nascimento:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <DatePicker fx:id="datePickerNascimento" prefHeight="35.0" prefWidth="300.0"
                                    style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="comboSexo" prefHeight="35.0" prefWidth="300.0"
                                  style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Número do SUS:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="fieldSus" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <Label text="Unidade de Saúde:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="fieldUnidadeSaude" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />
                    </children>
                </GridPane>
            </VBox>

            <!-- Seção 2: Filiação/Responsáveis -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #e8f5e8; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 20;">
                <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold;" text="2. Filiação/Responsáveis">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="Mãe" />
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="300" />
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fieldNomeMae" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0" />

                        <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldCpfMae" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="RG:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldRgMae" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </children>
                </GridPane>

                <Separator style="-fx-padding: 10 0 10 0;" />

                <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="Pai" />
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="300" />
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fieldNomePai" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0" />

                        <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldCpfPai" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="RG:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldRgPai" prefHeight="35.0" prefWidth="300.0"
                                   style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </VBox>

            <!-- Botões de ação -->
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="btnCancelar" mnemonicParsing="false"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 100; -fx-pref-height: 35;"
                        text="Cancelar" onAction="#cancelarCadastro"/>
                <Button fx:id="btnSalvar" mnemonicParsing="false"
                        style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 150; -fx-pref-height: 35;"
                        text="Salvar Matrícula" onAction="#salvarMatricula"/>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>