<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
    https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="crecheDB" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Liste suas entidades aqui -->
        <class>com.salo.sistemacreche.entidades.Alergia</class>
        <class>com.salo.sistemacreche.entidades.ClassificacaoEspecial</class>
        <class>com.salo.sistemacreche.entidades.ComposicaoFamiliar</class>
        <class>com.salo.sistemacreche.entidades.Crianca</class>
        <class>com.salo.sistemacreche.entidades.CriancaAlergia</class>
        <class>com.salo.sistemacreche.entidades.Endereco</class>
        <class>com.salo.sistemacreche.entidades.Matricula</class>
        <class>com.salo.sistemacreche.entidades.MembroFamilia</class>
        <class>com.salo.sistemacreche.entidades.Pessoa</class>
        <class>com.salo.sistemacreche.entidades.PessoaAutorizada</class>
        <class>com.salo.sistemacreche.entidades.PreMatricula</class>
        <class>com.salo.sistemacreche.entidades.Responsavel</class>
        <class>com.salo.sistemacreche.entidades.SituacaoHabitacional</class>
        <class>com.salo.sistemacreche.entidades.TipoAuxilio</class>
        <class>com.salo.sistemacreche.entidades.TipoResponsavel</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/CRECHE"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Para evitar problemas de timezone -->
            <property name="hibernate.jdbc.time_zone" value="America/Sao_Paulo"/>
        </properties>
    </persistence-unit>
</persistence>